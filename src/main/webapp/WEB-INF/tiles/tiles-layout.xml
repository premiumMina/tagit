<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<!-- 타일즈 기본 템플릿 페이지 설정 -->
<tiles-definitions>
	<!-- default : 템플릿에 설정된 페이지의 구성 요소에 대한 실제 파일을 지정합니다. -->
	<definition name="default" template="/WEB-INF/views/layout/body/default_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/layout/include/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/layout/include/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/layout/body/body.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/include/footer.jsp" />
	</definition>
	
	<definition name="tiles/*" extends="default">
		<put-attribute name="body" value="/WEB-INF/views/layout/body/{1}.jsp"/>
	</definition>
	
</tiles-definitions>